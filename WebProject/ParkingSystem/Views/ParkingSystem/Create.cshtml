@model Car

<div class="container mt-5">
    <form method="post">
        <h2>Register Car</h2>
        <p>amount 1.20 lv per hour</p>
        <div class="form-group">
            <label asp-for="Mark">Car Brand</label>
            <input asp-for="Mark" class="form-control" />
            <span asp-validation-for="Mark" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Plate">Plate Number</label>
            <input asp-for="Plate" class="form-control" />
            <span asp-validation-for="Plate" class="text-danger"></span>

        </div>
        <br />
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
